<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}SOPHIAX{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ’ </text></svg>">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>
        {% endblock %}
    </head>
    <body class="bg-slate-100 min-h-screen">
        <div class="flex min-h-screen">
            {# Sidebar #}
            <aside class="w-64 bg-slate-900 text-white flex flex-col fixed h-screen">
                {# Brand Logo #}
                <div class="p-6 border-b border-slate-700">
                    <a href="/" class="flex items-center gap-3 text-xl font-bold">
                        <span class="text-2xl">ðŸ’¥</span>
                        <span>SOPHIAX</span>
                    </a>
                </div>
                
                {# Navigation #}
                <nav class="flex-1 p-4 space-y-1">
                    <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors {{ app.request.pathInfo == '/' ? 'bg-slate-800 text-white' : '' }}">
                        <iconify-icon icon="solar:home-2-bold-duotone" width="20" height="20"></iconify-icon>
                        Dashboard
                    </a>
                    
                    <a href="{{ path('app_sops_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors {{ 'sop' in app.request.pathInfo ? 'bg-slate-800 text-white' : '' }}">
                        <iconify-icon icon="solar:document-text-bold-duotone" width="20" height="20"></iconify-icon>
                        All SOPs
                    </a>
                    
                    <a href="{{ path('app_learning_paths_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors {{ 'learning' in app.request.pathInfo ? 'bg-slate-800 text-white' : '' }}">
                        <iconify-icon icon="solar:book-bold-duotone" width="20" height="20"></iconify-icon>
                        Learning Paths
                    </a>
                    
                    <a href="{{ path('app_categories_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors {{ 'categories' in app.request.pathInfo ? 'bg-slate-800 text-white' : '' }}">
                        <iconify-icon icon="solar:folder-with-files-bold-duotone" width="20" height="20"></iconify-icon>
                        Categories
                    </a>
                    
                    <a href="{{ path('app_tags_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors {{ 'tags' in app.request.pathInfo ? 'bg-slate-800 text-white' : '' }}">
                        <iconify-icon icon="solar:tag-bold-duotone" width="20" height="20"></iconify-icon>
                        Tags
                    </a>
                    
                    <a href="{{ path('app_user') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors {{ 'user' in app.request.pathInfo ? 'bg-slate-800 text-white' : '' }}">
                        <iconify-icon icon="solar:users-group-rounded-bold-duotone" width="20" height="20"></iconify-icon>
                        Users
                    </a>
                </nav>
                
                {# User Profile #}
                {% if app.user %}
                <div class="p-4 border-t border-slate-700">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-purple-600 flex items-center justify-center text-sm font-semibold">
                            {{ app.user.name|slice(0, 2)|upper }}
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="text-sm font-medium truncate">{{ app.user.name }}</div>
                            <div class="text-xs text-slate-400">{{ app.user.roles[0]|replace({'ROLE_': ''})|capitalize }}</div>
                        </div>
                        <a href="{{ path('app_logout') }}" class="text-slate-400 hover:text-white" title="Logout">
                            <iconify-icon icon="solar:logout-2-bold-duotone" width="20" height="20"></iconify-icon>
                        </a>
                    </div>
                </div>
                {% endif %}
            </aside>

            {# Main Content #}
            <main class="flex-1 ml-64">
                {# Header #}
                <header class="bg-white border-b border-slate-200 px-8 py-4 sticky top-0 z-10">
                    <div class="flex items-center justify-between">
                        <div>
                            <h1 class="text-xl font-semibold text-slate-800">{% block page_title %}Dashboard{% endblock %}</h1>
                        </div>
                        
                        <div class="flex items-center gap-4">
                            {# Search #}
                            <div class="relative">
                                <input type="text" placeholder="Search..." class="w-64 pl-10 pr-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none text-sm">
                                <iconify-icon icon="solar:magnifer-linear" class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400" width="20" height="20"></iconify-icon>
                            </div>
                            
                            {# Notifications #}
                            <button class="relative p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-lg transition-colors">
                                <iconify-icon icon="solar:bell-bold-duotone" width="24" height="24"></iconify-icon>
                                <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                            </button>
                        </div>
                    </div>
                </header>

                {# Page Content #}
                <div class="p-8">
                    {# Flash Messages #}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-emerald-50 border border-emerald-200 text-emerald-700{% elseif label == 'error' %}bg-red-50 border border-red-200 text-red-700{% else %}bg-blue-50 border border-blue-200 text-blue-700{% endif %}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>
    </body>
</html>
