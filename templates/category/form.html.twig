{% extends 'base.html.twig' %}

{% block title %}{{ category.id ? 'Edit' : 'Add' }} Category - SOPHIAX{% endblock %}
{% block page_title %}{{ category.id ? 'Edit Category' : 'Add New Category' }}{% endblock %}

{% block body %}
<div class="max-w-xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_categories_index') }}" class="text-slate-500 hover:text-purple-600">Categories</a>
        <iconify-icon icon="solar:alt-arrow-right-bold" class="text-slate-400" width="16" height="16"></iconify-icon>
        <span class="text-slate-800 font-medium">{{ category.id ? 'Edit' : 'Add' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            {# Name #}
            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            {# Description #}
            <div>
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ path('app_categories_index') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ category.id ? 'Update' : 'Create' }} Category
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
