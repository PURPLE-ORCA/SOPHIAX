{% extends 'base.html.twig' %}

{% block title %}{{ category ? 'Edit' : 'Add' }} Category - SOPHIAX{% endblock %}
{% block page_title %}{{ category ? 'Edit Category' : 'Add New Category' }}{% endblock %}

{% block body %}
<div class="max-w-xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_categories_index') }}" class="text-slate-500 hover:text-indigo-600">Categories</a>
        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <span class="text-slate-800 font-medium">{{ category ? 'Edit' : 'Add' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <form method="post" class="space-y-6">
            {# Name #}
            <div>
                <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                    Name <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    name="name" 
                    id="name" 
                    value="{{ category ? category.name : '' }}"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none"
                    placeholder="e.g., IT, Safety, HR"
                    required
                >
            </div>

            {# Description #}
            <div>
                <label for="description" class="block text-sm font-medium text-slate-700 mb-2">
                    Description
                </label>
                <textarea 
                    name="description" 
                    id="description" 
                    rows="3"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none resize-none"
                    placeholder="Brief description of this category..."
                >{{ category ? category.description : '' }}</textarea>
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ path('app_categories_index') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ category ? 'Update' : 'Create' }} Category
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
