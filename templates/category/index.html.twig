{% extends 'base.html.twig' %}

{% block title %}Categories - SOPHIAX{% endblock %}
{% block page_title %}Categories{% endblock %}

{% block body %}
<div class="space-y-6">
    {# Header with Actions #}
    <div class="flex items-center justify-between">
        <p class="text-slate-500">Organize your SOPs by category</p>
        <a href="{{ path('app_categories_new') }}" class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg flex items-center gap-2 transition-colors">
            <iconify-icon icon="solar:add-circle-bold" width="20" height="20"></iconify-icon>
            Add Category
        </a>
    </div>

    {# Categories Grid #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for category in categories %}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="p-3 bg-purple-50 rounded-lg text-purple-600">
                        <iconify-icon icon="solar:folder-with-files-bold-duotone" width="24" height="24"></iconify-icon>
                    </div>
                    <div class="flex items-center gap-1">
                        <a href="{{ path('app_categories_edit', {id: category.id}) }}" class="p-2 text-slate-500 hover:text-purple-600 hover:bg-slate-100 rounded-lg transition-colors" title="Edit">
                            <iconify-icon icon="solar:pen-bold" width="20" height="20"></iconify-icon>
                        </a>
                        <form action="{{ path('app_categories_delete', {id: category.id}) }}" method="post" class="inline" onsubmit="return confirm('Delete this category?')">
                            <button type="submit" class="p-2 text-slate-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Delete">
                                <iconify-icon icon="solar:trash-bin-trash-bold" width="20" height="20"></iconify-icon>
                            </button>
                        </form>
                    </div>
                </div>
                <h3 class="text-lg font-semibold text-slate-800 mb-2">{{ category.name }}</h3>
                <p class="text-sm text-slate-500 mb-4">{{ category.description|default('No description')|slice(0,80) }}{% if category.description|length > 80 %}...{% endif %}</p>
                <div class="flex items-center text-sm text-slate-500">
                    <iconify-icon icon="solar:document-text-linear" class="mr-1" width="16" height="16"></iconify-icon>
                    {{ category.sops|length }} SOP{{ category.sops|length != 1 ? 's' : '' }}
                </div>
            </div>
        {% else %}
            <div class="col-span-full bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
                <iconify-icon icon="solar:folder-with-files-bold-duotone" class="text-slate-300 mx-auto mb-4" width="48" height="48"></iconify-icon>
                <h3 class="text-lg font-medium text-slate-800 mb-2">No categories yet</h3>
                <p class="text-slate-500 mb-4">Create your first category to organize SOPs</p>
                <a href="{{ path('app_categories_new') }}" class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                    <iconify-icon icon="solar:add-circle-bold" width="20" height="20"></iconify-icon>
                    Add Category
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
