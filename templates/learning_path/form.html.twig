{% extends 'base.html.twig' %}

{% block title %}{{ learning_path ? 'Edit' : 'Create' }} Learning Path - SOPHIAX{% endblock %}
{% block page_title %}{{ learning_path ? 'Edit Learning Path' : 'Create Learning Path' }}{% endblock %}

{% block body %}
<div class="max-w-xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_learning_paths_index') }}" class="text-slate-500 hover:text-purple-600">Learning Paths</a>
        <iconify-icon icon="solar:alt-arrow-right-bold" class="text-slate-400" width="16" height="16"></iconify-icon>
        <span class="text-slate-800 font-medium">{{ learning_path ? 'Edit' : 'Create' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <form method="post" class="space-y-6">
            {# Title #}
            <div>
                <label for="title" class="block text-sm font-medium text-slate-700 mb-2">
                    Title <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    name="title" 
                    id="title" 
                    value="{{ learning_path ? learning_path.title : '' }}"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                    placeholder="e.g., New Employee Onboarding"
                    required
                >
            </div>

            {# Description #}
            <div>
                <label for="description" class="block text-sm font-medium text-slate-700 mb-2">
                    Description
                </label>
                <textarea 
                    name="description" 
                    id="description" 
                    rows="4"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none resize-none"
                    placeholder="Describe what learners will achieve..."
                >{{ learning_path ? learning_path.description : '' }}</textarea>
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ learning_path ? path('app_learning_paths_show', {id: learning_path.id}) : path('app_learning_paths_index') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ learning_path ? 'Update' : 'Create' }} Path
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
