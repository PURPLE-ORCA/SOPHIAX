{% extends 'base.html.twig' %}

{% block title %}Learning Paths - SOPHIAX{% endblock %}
{% block page_title %}Learning Paths{% endblock %}

{% block body %}
<div class="space-y-6">
    {# Header with Actions #}
    <div class="flex items-center justify-between">
        <p class="text-slate-500">Create guided learning journeys through SOPs</p>
        <a href="{{ path('app_learning_paths_new') }}" class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg flex items-center gap-2 transition-colors">
            <iconify-icon icon="solar:add-circle-bold" width="20" height="20"></iconify-icon>
            Create Path
        </a>
    </div>

    {# Learning Paths Grid #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for path in learning_paths %}
            <a href="{{ path('app_learning_paths_show', {id: path.id}) }}" class="block bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md hover:border-purple-200 transition-all group">
                <div class="flex items-start justify-between mb-4">
                    <div class="p-3 bg-purple-50 rounded-lg text-purple-600 group-hover:bg-purple-100 transition-colors">
                        <iconify-icon icon="solar:book-bold-duotone" width="24" height="24"></iconify-icon>
                    </div>
                    <span class="text-xs font-medium text-slate-500">{{ path.items|length }} step{{ path.items|length != 1 ? 's' : '' }}</span>
                </div>
                <h3 class="text-lg font-semibold text-slate-800 mb-2 group-hover:text-purple-600 transition-colors">{{ path.title }}</h3>
                <p class="text-sm text-slate-500 mb-4">{{ path.description|default('No description')|slice(0,100) }}{% if path.description|length > 100 %}...{% endif %}</p>
                
                {# Progress dots #}
                <div class="flex items-center gap-1">
                    {% for i in 1..min(path.items|length, 8) %}
                        <div class="w-2 h-2 rounded-full bg-purple-400"></div>
                    {% endfor %}
                    {% if path.items|length > 8 %}
                        <span class="text-xs text-slate-400 ml-1">+{{ path.items|length - 8 }}</span>
                    {% endif %}
                    {% if path.items|length == 0 %}
                        <span class="text-xs text-slate-400">No steps yet</span>
                    {% endif %}
                </div>
            </a>
        {% else %}
            <div class="col-span-full bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
                <iconify-icon icon="solar:book-bold-duotone" class="text-slate-300 mx-auto mb-4" width="48" height="48"></iconify-icon>
                <h3 class="text-lg font-medium text-slate-800 mb-2">No learning paths yet</h3>
                <p class="text-slate-500 mb-4">Create your first learning path to guide users through SOPs</p>
                <a href="{{ path('app_learning_paths_new') }}" class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                    <iconify-icon icon="solar:add-circle-bold" width="20" height="20"></iconify-icon>
                    Create Path
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
