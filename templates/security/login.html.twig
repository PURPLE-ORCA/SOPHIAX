{% extends 'auth_base.html.twig' %}

{% block title %}Log in - SOPHIAX{% endblock %}

{% block body %}
<div class="min-h-[80vh] flex items-center justify-center w-full">
    <div class="w-full max-w-md">
        {# Logo & Brand #}
        <div class="text-center mb-8">
            <iconify-icon icon="solar:bolt-bold-duotone" class="text-purple-600 mx-auto" width="64" height="64"></iconify-icon>
            <h1 class="text-3xl font-bold text-slate-800 mt-4">Welcome Back</h1>
            <p class="text-slate-500 mt-2">Sign in to your SOPHIAX account</p>
        </div>

        {# Login Card #}
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-slate-200">
            {% if error %}
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="bg-emerald-50 border border-emerald-200 text-emerald-700 px-4 py-3 rounded-lg mb-6">
                    You are logged in as <strong>{{ app.user.userIdentifier }}</strong>
                    <a href="{{ logout_path() }}" class="underline ml-2 hover:text-emerald-800">Logout</a>
                </div>
            {% else %}
                <form method="post" class="space-y-6">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Email Field #}
                    <div>
                        <label for="username" class="block text-sm font-medium text-slate-700 mb-2">
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            name="_username" 
                            id="username" 
                            value="{{ last_username }}"
                            class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                            placeholder="you@company.com"
                            autocomplete="email" 
                            required 
                            autofocus
                        >
                    </div>

                    {# Password Field #}
                    <div>
                        <label for="password" class="block text-sm font-medium text-slate-700 mb-2">
                            Password
                        </label>
                        <input 
                            type="password" 
                            name="_password" 
                            id="password" 
                            class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                            placeholder="••••••••"
                            autocomplete="current-password" 
                            required
                        >
                    </div>

                    {# Submit Button #}
                    <button 
                        type="submit" 
                        class="w-full bg-purple-800 hover:bg-purple-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors shadow-lg shadow-indigo-500/25"
                    >
                        Sign In
                    </button>
                </form>

                {# Footer Links #}
                <div class="mt-6 text-center text-sm text-slate-500">
                    Don't have an account? 
                    <a href="{{ path('app_register') }}" class="text-purple-800 hover:text-purple-700 font-medium">
                        Create one
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
