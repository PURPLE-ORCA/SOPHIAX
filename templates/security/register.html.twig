{% extends 'auth_base.html.twig' %}

{% block title %}Register - SOPHIAX{% endblock %}

{% block body %}
<div class="min-h-[80vh] flex items-center justify-center w-full">
    <div class="w-full max-w-md">
        {# Logo & Brand #}
        <div class="text-center mb-8">
            <span class="text-5xl">ðŸ’¥</span>
            <h1 class="text-3xl font-bold text-slate-800 mt-4">Create Account</h1>
            <p class="text-slate-500 mt-2">Join SOPHIAX today</p>
        </div>

        {# Register Card #}
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-slate-200">
            {% if errors is defined and errors|length > 0 %}
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
                    <ul class="list-disc list-inside">
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="bg-emerald-50 border border-emerald-200 text-emerald-700 px-4 py-3 rounded-lg mb-6">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" class="space-y-5">
                {# Name Field #}
                <div>
                    <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                        Full Name
                    </label>
                    <input 
                        type="text" 
                        name="name" 
                        id="name" 
                        value="{{ last_name|default('') }}"
                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                        placeholder="Purple Orca"
                        required 
                        autofocus
                    >
                </div>

                {# Email Field #}
                <div>
                    <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                        Email Address
                    </label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email" 
                        value="{{ last_email|default('') }}"
                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                        placeholder="you@company.com"
                        required
                    >
                </div>

                {# Password Field #}
                <div>
                    <label for="password" class="block text-sm font-medium text-slate-700 mb-2">
                        Password
                    </label>
                    <input 
                        type="password" 
                        name="password" 
                        id="password" 
                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                        placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                        required
                    >
                </div>

                {# Confirm Password Field #}
                <div>
                    <label for="confirm_password" class="block text-sm font-medium text-slate-700 mb-2">
                        Confirm Password
                    </label>
                    <input 
                        type="password" 
                        name="confirm_password" 
                        id="confirm_password" 
                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                        placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                        required
                    >
                </div>

                {# Submit Button #}
                <button 
                    type="submit" 
                    class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors shadow-lg shadow-purple-500/25"
                >
                    Create Account
                </button>
            </form>

            {# Footer Links #}
            <div class="mt-6 text-center text-sm text-slate-500">
                Already have an account? 
                <a href="{{ path('app_login') }}" class="text-purple-800 hover:text-purple-700 font-medium">
                    Sign in
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
