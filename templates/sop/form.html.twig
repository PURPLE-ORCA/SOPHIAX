{% extends 'base.html.twig' %}

{% block title %}{{ sop ? 'Edit' : 'Create' }} SOP - SOPHIAX{% endblock %}
{% block page_title %}{{ sop ? 'Edit SOP' : 'Create New SOP' }}{% endblock %}

{% block body %}
<div class="max-w-3xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_sops_index') }}" class="text-slate-500 hover:text-purple-600">All SOPs</a>
        <iconify-icon icon="solar:alt-arrow-right-bold" class="text-slate-400" width="16" height="16"></iconify-icon>
        <span class="text-slate-800 font-medium">{{ sop ? 'Edit' : 'Create' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <form method="post" class="space-y-6">
            {# Title #}
            <div>
                <label for="title" class="block text-sm font-medium text-slate-700 mb-2">
                    Title <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    name="title" 
                    id="title" 
                    value="{{ sop ? sop.title : '' }}"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                    placeholder="Enter SOP title"
                    required
                >
            </div>

            {# Description #}
            <div>
                <label for="description" class="block text-sm font-medium text-slate-700 mb-2">
                    Description <span class="text-red-500">*</span>
                </label>
                <textarea 
                    name="description" 
                    id="description" 
                    rows="6"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none resize-none"
                    placeholder="Describe the purpose and scope of this SOP..."
                    required
                >{{ sop ? sop.description : '' }}</textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {# Category #}
                <div>
                    <label for="category" class="block text-sm font-medium text-slate-700 mb-2">
                        Category
                    </label>
                    <select 
                        name="category" 
                        id="category" 
                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                    >
                        <option value="">Select a category</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {{ sop and sop.category and sop.category.id == category.id ? 'selected' : '' }}>
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Department #}
                <div>
                    <label for="department" class="block text-sm font-medium text-slate-700 mb-2">
                        Department
                    </label>
                    <input 
                        type="text" 
                        name="department" 
                        id="department" 
                        value="{{ sop ? sop.department : '' }}"
                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                        placeholder="e.g., IT, HR, Operations"
                    >
                </div>
            </div>

            {# Difficulty #}
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">
                    Difficulty Level
                </label>
                <div class="flex items-center gap-4">
                    {% for i in 1..5 %}
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input 
                                type="radio" 
                                name="difficulty" 
                                value="{{ i }}" 
                                {{ sop and sop.difficulty == i ? 'checked' : '' }}
                                {{ not sop and i == 1 ? 'checked' : '' }}
                                class="text-purple-600 focus:ring-purple-500"
                            >
                            <span class="text-sm text-slate-600">{{ i }}</span>
                        </label>
                    {% endfor %}
                </div>
                <p class="text-xs text-slate-500 mt-1">1 = Easy, 5 = Expert</p>
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ sop ? path('app_sops_show', {id: sop.id}) : path('app_sops_index') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ sop ? 'Update SOP' : 'Create SOP' }}
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
