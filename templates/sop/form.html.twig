{% extends 'base.html.twig' %}

{% block title %}{{ sop ? 'Edit' : 'Create' }} SOP - SOPHIAX{% endblock %}
{% block page_title %}{{ sop ? 'Edit SOP' : 'Create New SOP' }}{% endblock %}

{% block body %}
<div class="max-w-3xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_sops_index') }}" class="text-slate-500 hover:text-purple-600">All SOPs</a>
        <iconify-icon icon="solar:alt-arrow-right-bold" class="text-slate-400" width="16" height="16"></iconify-icon>
        <span class="text-slate-800 font-medium">{{ sop ? 'Edit' : 'Create' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            {# Title #}
            <div>
                {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                <span class="text-red-500">*</span>
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            {# Description #}
            <div>
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                <span class="text-red-500">*</span>
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {# Category #}
                <div>
                    {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                </div>

                {# Department #}
                <div>
                    {{ form_label(form.department, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                    {{ form_widget(form.department) }}
                    {{ form_errors(form.department) }}
                </div>
            </div>

            {# Difficulty #}
            <div>
                {{ form_label(form.difficulty, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                <div class="flex items-center gap-4">
                    {% for child in form.difficulty %}
                        <label class="flex items-center gap-2 cursor-pointer">
                            {{ form_widget(child, {'attr': {'class': 'text-purple-600 focus:ring-purple-500'}}) }}
                            <span class="text-sm text-slate-600">{{ child.vars.label }}</span>
                        </label>
                    {% endfor %}
                </div>
                {{ form_errors(form.difficulty) }}
                <p class="text-xs text-slate-500 mt-1">1 = Easy, 5 = Expert</p>
            </div>

            {# Tags #}
            <div>
                {{ form_label(form.tags, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {{ form_widget(form.tags) }}
                {{ form_errors(form.tags) }}
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ sop ? path('app_sops_show', {id: sop.id}) : path('app_sops_index') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ sop ? 'Update SOP' : 'Create SOP' }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
