{% extends 'base.html.twig' %}

{% block title %}{{ sop.title }} - SOPHIAX{% endblock %}
{% block page_title %}{{ sop.title }}{% endblock %}

{% block body %}
<div class="space-y-6">
    {# Breadcrumb & Actions #}
    <div class="flex items-center justify-between">
        <nav class="flex items-center gap-2 text-sm">
            <a href="{{ path('app_sops_index') }}" class="text-slate-500 hover:text-purple-600">All SOPs</a>
            <iconify-icon icon="solar:alt-arrow-right-bold" class="text-slate-400" width="16" height="16"></iconify-icon>
            <span class="text-slate-800 font-medium">{{ sop.title }}</span>
        </nav>
        <div class="flex items-center gap-2">
            <a href="{{ path('app_sops_edit', {id: sop.id}) }}" class="bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium py-2 px-4 rounded-lg flex items-center gap-2 transition-colors">
                <iconify-icon icon="solar:pen-bold" width="20" height="20"></iconify-icon>
                Edit
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Main Content #}
        <div class="lg:col-span-2 space-y-6">
            {# Description Card #}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-4">Description</h2>
                <div class="prose prose-slate max-w-none">
                    {{ sop.description|nl2br }}
                </div>
            </div>

            {# Steps #}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-200">
                    <h2 class="text-lg font-semibold text-slate-800">Steps</h2>
                </div>
                {% if sop.steps|length > 0 %}
                    <div class="divide-y divide-slate-100">
                        {% for step in sop.steps %}
                            <div class="p-6 flex gap-4">
                                <div class="shrink-0 w-8 h-8 rounded-full bg-purple-100 text-purple-600 flex items-center justify-center font-semibold text-sm">
                                    {{ step.stepNumber }}
                                </div>
                                <div class="flex-1">
                                    <div class="prose prose-slate max-w-none">
                                        {{ step.content|nl2br }}
                                    </div>
                                    {% if step.attachment %}
                                        <div class="mt-3">
                                            <a href="{{ step.attachment }}" target="_blank" class="inline-flex items-center gap-2 text-sm text-purple-600 hover:text-purple-700">
                                                <iconify-icon icon="solar:paperclip-bold" width="16" height="16"></iconify-icon>
                                                View Attachment
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="p-6 text-center text-slate-500">
                        No steps defined yet.
                    </div>
                {% endif %}
            </div>
        </div>

        {# Sidebar #}
        <div class="space-y-6">
            {# Metadata #}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-4">Details</h2>
                <dl class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Status</dt>
                        <dd class="mt-1">
                            {% if sop.status == 'published' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Published</span>
                            {% elseif sop.status == 'draft' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-600">Draft</span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700">{{ sop.status|capitalize }}</span>
                            {% endif %}
                        </dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Category</dt>
                        <dd class="mt-1 text-slate-800">{{ sop.category.name|default('—') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Department</dt>
                        <dd class="mt-1 text-slate-800">{{ sop.department|default('—') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Difficulty</dt>
                        <dd class="mt-1 flex items-center gap-1">
                            {% for i in 1..5 %}
                                {% if i <= sop.difficulty|default(0) %}
                                    <div class="w-3 h-3 rounded-full bg-purple-500"></div>
                                {% else %}
                                    <div class="w-3 h-3 rounded-full bg-slate-200"></div>
                                {% endif %}
                            {% endfor %}
                        </dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Version</dt>
                        <dd class="mt-1 text-slate-800">v{{ sop.versionNumber }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Created By</dt>
                        <dd class="mt-1 text-slate-800">{{ sop.createdBy.name|default('System') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Created At</dt>
                        <dd class="mt-1 text-slate-800">{{ sop.createdAt|date('M j, Y') }}</dd>
                    </div>
                    {% if sop.updatedAt %}
                    <div>
                        <dt class="text-sm font-medium text-slate-500">Last Updated</dt>
                        <dd class="mt-1 text-slate-800">{{ sop.updatedAt|date('M j, Y') }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div>

            {# Tags #}
            {% if sop.tags|length > 0 %}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-4">Tags</h2>
                <div class="flex flex-wrap gap-2">
                    {% for tag in sop.tags %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-50 text-purple-700">
                            {{ tag.name }}
                        </span>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {# Summary (AI) #}
            {% if sop.summary %}
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-4">AI Summary</h2>
                <p class="text-slate-600 text-sm">{{ sop.summary }}</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
