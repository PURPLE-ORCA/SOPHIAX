{% extends 'base.html.twig' %}

{% block title %}Tags - SOPHIAX{% endblock %}
{% block page_title %}Tags{% endblock %}

{% block body %}
<div class="space-y-6">
    {# Header with Actions #}
    <div class="flex items-center justify-between">
        <p class="text-slate-500">Manage tags for filtering SOPs</p>
        <a href="{{ path('app_tags_new') }}" class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg flex items-center gap-2 transition-colors">
            <iconify-icon icon="solar:tag-bold" width="20" height="20"></iconify-icon>
            Add Tag
        </a>
    </div>

    {# Tags List #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        {% if tags|length > 0 %}
            <div class="p-6">
                <div class="flex flex-wrap gap-3">
                    {% for tag in tags %}
                        <div class="group inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-50 text-purple-700 border border-purple-100 hover:bg-purple-100 transition-colors">
                            <span class="font-medium">{{ tag.name }}</span>
                            <span class="text-xs text-purple-500">({{ tag.sops|length }})</span>
                            <div class="hidden group-hover:flex items-center gap-1 ml-1">
                                <a href="{{ path('app_tags_edit', {id: tag.id}) }}" class="p-1 text-purple-500 hover:text-purple-700 rounded transition-colors" title="Edit">
                                    <iconify-icon icon="solar:pen-bold" width="16" height="16"></iconify-icon>
                                </a>
                                <form action="{{ path('app_tags_delete', {id: tag.id}) }}" method="post" class="inline" onsubmit="return confirm('Delete this tag?')">
                                    <button type="submit" class="p-1 text-purple-500 hover:text-red-600 rounded transition-colors" title="Delete">
                                        <iconify-icon icon="solar:trash-bin-trash-bold" width="16" height="16"></iconify-icon>
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="p-12 text-center">
                <iconify-icon icon="solar:tag-bold-duotone" class="text-slate-300 mx-auto mb-4" width="48" height="48"></iconify-icon>
                <h3 class="text-lg font-medium text-slate-800 mb-2">No tags yet</h3>
                <p class="text-slate-500 mb-4">Create tags to help filter and organize SOPs</p>
                <a href="{{ path('app_tags_new') }}" class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                    <iconify-icon icon="solar:tag-bold" width="20" height="20"></iconify-icon>
                    Add Tag
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
