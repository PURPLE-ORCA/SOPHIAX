{% extends 'base.html.twig' %}

{% block title %}{{ user.id ? 'Edit' : 'Add' }} User - SOPHIAX{% endblock %}
{% block page_title %}{{ user.id ? 'Edit User' : 'Add New User' }}{% endblock %}

{% block body %}
<div class="max-w-xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_user') }}" class="text-slate-500 hover:text-purple-600">Users</a>
        <iconify-icon icon="solar:alt-arrow-right-bold" class="text-slate-400" width="16" height="16"></iconify-icon>
        <span class="text-slate-800 font-medium">{{ user.id ? 'Edit' : 'Add' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            {# Name #}
            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                <span class="text-red-500">*</span>
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            {# Email #}
            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                <span class="text-red-500">*</span>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            {# Role #}
            <div>
                {{ form_label(form.role, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {{ form_widget(form.role) }}
                {{ form_errors(form.role) }}
            </div>

            {# Password #}
            <div>
                {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {% if not user.id %}<span class="text-red-500">*</span>{% endif %}
                {{ form_widget(form.plainPassword) }}
                {{ form_errors(form.plainPassword) }}
                {% if user.id %}
                    <p class="text-xs text-slate-500 mt-1">Leave blank to keep the current password</p>
                {% endif %}
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ path('app_user') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ user.id ? 'Update' : 'Create' }} User
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
