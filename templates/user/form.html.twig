{% extends 'base.html.twig' %}

{% block title %}{{ user ? 'Edit' : 'Add' }} User - SOPHIAX{% endblock %}
{% block page_title %}{{ user ? 'Edit User' : 'Add New User' }}{% endblock %}

{% block body %}
<div class="max-w-xl">
    {# Breadcrumb #}
    <nav class="flex items-center gap-2 text-sm mb-6">
        <a href="{{ path('app_user') }}" class="text-slate-500 hover:text-purple-600">Users</a>
        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <span class="text-slate-800 font-medium">{{ user ? 'Edit' : 'Add' }}</span>
    </nav>

    {# Form Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <form method="post" class="space-y-6">
            {# Name #}
            <div>
                <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                    Full Name <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    name="name" 
                    id="name" 
                    value="{{ user ? user.name : '' }}"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                    placeholder="John Doe"
                    required
                >
            </div>

            {# Email #}
            <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                    Email Address <span class="text-red-500">*</span>
                </label>
                <input 
                    type="email" 
                    name="email" 
                    id="email" 
                    value="{{ user ? user.email : '' }}"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                    placeholder="john@company.com"
                    required
                >
            </div>

            {# Role #}
            <div>
                <label for="role" class="block text-sm font-medium text-slate-700 mb-2">
                    Role
                </label>
                <select 
                    name="role" 
                    id="role"
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                >
                    <option value="ROLE_USER" {{ user and 'ROLE_USER' in user.roles ? 'selected' : '' }}>User</option>
                    <option value="ROLE_MANAGER" {{ user and 'ROLE_MANAGER' in user.roles ? 'selected' : '' }}>Manager</option>
                    <option value="ROLE_ADMIN" {{ user and 'ROLE_ADMIN' in user.roles ? 'selected' : '' }}>Admin</option>
                </select>
            </div>

            {# Password #}
            <div>
                <label for="password" class="block text-sm font-medium text-slate-700 mb-2">
                    Password {{ user ? '' : '<span class="text-red-500">*</span>'|raw }}
                </label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all outline-none"
                    placeholder="{{ user ? 'Leave blank to keep current' : '••••••••' }}"
                    {{ user ? '' : 'required' }}
                >
                {% if user %}
                    <p class="text-xs text-slate-500 mt-1">Leave blank to keep the current password</p>
                {% endif %}
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                <a href="{{ path('app_user') }}" class="text-slate-600 hover:text-slate-800 font-medium">
                    Cancel
                </a>
                <button 
                    type="submit" 
                    class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-6 rounded-lg transition-colors"
                >
                    {{ user ? 'Update' : 'Create' }} User
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
